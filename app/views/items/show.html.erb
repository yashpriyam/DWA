<div class="col-md-10 col-md-offset-1">
  <h2><%= @item.title %></h2>
  <p><%= @item.description %></p>

  <div class="col-md-4 col-md-offset-4">
    <%= link_to "Back", root_path, class: "btn btn-sm btn-default" %>
    <%= link_to "Edit", edit_item_path(@item), class: "btn btn-sm btn-info" %>
    <%= link_to "Delete", item_path(@item), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
  </div>

</div>
